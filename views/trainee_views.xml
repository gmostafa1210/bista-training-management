<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <record id="view_bista_trainee_tree" model="ir.ui.view">
        <field name="name">bista.trainee.tree</field>
        <field name="model">bista.trainee</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="trainee_id"/>
                <field name="emp_code"/>
                <field name="email"/>
                <field name="date_of_joining"/>
            </tree>
        </field>
    </record>

    <record id="view_bista_trainee_search" model="ir.ui.view">
        <field name="name">bista.trainee.search</field>
        <field name="model">bista.trainee</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="trainee_id"/>
                <field name="emp_code"/>
                <field name="email"/>
            </search>
        </field>
    </record>

    <record id="view_bista_trainee_form" model="ir.ui.view" >
        <field name="name">bista.trainee.form</field>
        <field name="model">bista.trainee</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="first_name"/>
                        <field name="last_name"/>
                        <field name="name"/>
                        <field name="trainee_id"/>
                        <field name="emp_code"/>
                        <field name="email"/>
                        <field name="linkedin_url"/>
                        <field name="gender"/>
                        <field name="dob"/>
                        <field name="date_of_joining"/>
                    </group>    
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_bista_trainee_kanban" model="ir.ui.view">
        <field name="name">bista.trainee.kanban</field>
        <field name="model">bista.trainee</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="id"/>
                <field name="name"/>
                <field name="trainee_id"/>
                <field name="email"/>
                <field name="gender"/>
                <field name="dob"/>
                <field name="date_of_joining"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <ul>
                                    <li><strong>Name: </strong><field name="name"/></li>
                                    <li><strong>Trainee ID: </strong><field name="trainee_id"/></li>
                                    <li><strong>Personal Email ID: </strong><field name="email"/></li>
                                    <li><strong>Gender: </strong><field name="gender"/></li>
                                    <li><strong>DOB: </strong><field name="dob"/></li>
                                    <li><strong>Date of Joining: </strong><field name="date_of_joining"/></li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_bista_training_management_system_trainee" model="ir.actions.act_window">
        <field name="name">Trainee</field>
        <field name="res_model">bista.trainee</field>
        <field name="view_mode">kanban,tree,form</field>
        <!-- <field name='context'>
            {
                'default_trainee_id':'TRAINEE-',
            }
        </field> -->
    </record>

    <menuitem 
        id='menu_bista_training_management_system'
        name='Bista Training Management System'/>

    <menuitem 
        id='menu_bista_training_management_system_trainee' 
        action='action_bista_training_management_system_trainee' 
        name='Trainee'
        parent='menu_bista_training_management_system'
        sequence='1'/>

</odoo>