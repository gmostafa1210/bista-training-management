<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <record id="view_bista_location_tree" model="ir.ui.view">
        <field name="name">bista.location.tree</field>
        <field name="model">bista.location</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="city"/>
                <field name="state_id"/>
                <field name="country_id"/>
            </tree>
        </field>
    </record>

    <record id="view_bista_location_search" model="ir.ui.view">
        <field name="name">bista.location.search</field>
        <field name="model">bista.location</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="city"/>
                <field name="state_id"/>
                <field name="country_id"/>
            </search>
        </field>
    </record>

    <record id="view_bista_location_form" model="ir.ui.view" >
        <field name="name">bista.location.form</field>
        <field name="model">bista.location</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="street_1"/>
                        <field name="street_2"/>
                        <field name="city"/>
                        <field name="state_id"/>
                        <field name="country_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>