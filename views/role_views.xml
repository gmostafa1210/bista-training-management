<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <record id="view_bista_role_tree" model="ir.ui.view">
        <field name="name">bista.trainee.role.tree</field>
        <field name="model">bista.trainee.role</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="sequnce"/>
            </tree>
        </field>
    </record>

    <record id="view_bista_role_search" model="ir.ui.view">
        <field name="name">bista.trainee.role.search</field>
        <field name="model">bista.trainee.role</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="sequnce"/>
            </search>
        </field>
    </record>

    <record id="view_bista_role_form" model="ir.ui.view" >
        <field name="name">bista.trainee.role.form</field>
        <field name="model">bista.trainee.role</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="sequnce"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_bista_training_management_system_role" model="ir.actions.act_window">
        <field name="name">Designation/Role</field>
        <field name="res_model">bista.trainee.role</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem 
        id='menu_bista_training_management_system_role' 
        action='action_bista_training_management_system_role' 
        name='Designation/Role'
        parent='menu_bista_training_management_system'
        sequence='3'/>

</odoo>